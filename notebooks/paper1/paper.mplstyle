# Custom matplotlib style
axes.facecolor: white
axes.grid: False
axes.labelsize: 12
axes.linewidth: 1.5
axes.edgecolor: black
legend.fontsize: 12

xtick.major.size: 5
xtick.major.width: 1
xtick.minor.size: 3
xtick.minor.width: 1
xtick.top: True
xtick.bottom: True
xtick.direction: in
xtick.labelsize: 12

ytick.major.size: 5
ytick.major.width: 1
ytick.minor.size: 3
ytick.minor.width: 1
ytick.right: True
ytick.left: True
ytick.direction: in
ytick.labelsize: 12

font.family: Times New Roman

